<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/task
		http://www.springframework.org/schema/task/spring-task.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <description>
        系统批量任务
    </description>

    <context:component-scan base-package="com.mizlicai.eudemon.task"/>

    <task:annotation-driven/>

    <bean id="exceptionCheckTask" class="com.mizlicai.eudemon.task.ExceptionCheckTask"/>
    <bean id="retryRequestTask" class="com.mizlicai.eudemon.task.RetryRequestTask"/>
    <bean id="servicesTask" class="com.mizlicai.eudemon.task.ServicesTask"/>


    <!-- 
    <task:executor id="executor" pool-size="10" queue-capacity="1000"/>
	<task:scheduler id="scheduler" pool-size="10" />
     -->

</beans>  
